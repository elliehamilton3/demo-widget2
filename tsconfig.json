{
  "strict": true,
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "lib": ["dom", "es2015"],
    "jsx": "react",
    "esModuleInterop": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules"]
}
